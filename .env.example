# Environment Configuration Template
# Copy this file to .env.local and fill in the values

# Application
NODE_ENV=development
PORT=3000
NEXTAUTH_URL=http://localhost:3000

# Security
NEXTAUTH_SECRET=your-super-secret-jwt-secret-min-32-chars
NEXT_PUBLIC_ENCRYPTION_KEY=your-encryption-key-32-chars-min

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Database (for local development)
DATABASE_URL=postgresql://postgres:password@localhost:5432/dentalflow
POSTGRES_PASSWORD=your-secure-postgres-password

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-secure-redis-password

# Email Service (choose one)
# Sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
# or Resend
RESEND_API_KEY=your-resend-api-key
# or SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Storage
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
# or Supabase Storage
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=your-storage-bucket

# Payment Processing (Stripe)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Monitoring & Logging
SENTRY_DSN=https://your-sentry-dsn
LOG_LEVEL=info

# API Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Session Configuration
SESSION_TIMEOUT=600000
SESSION_WARNING=60000

# Multi-tenant Configuration
TENANT_ISOLATION_MODE=rls
DEFAULT_TENANT_SETTINGS='{"features":{"multiProvider":false,"advancedReporting":false}}'

# Feature Flags
ENABLE_MCP_DASHBOARD=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_PWA=true
ENABLE_OFFLINE_MODE=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Development Tools
NEXT_TELEMETRY_DISABLED=1
ANALYZE_BUNDLE=false

# Cal.com Integration
CALCOM_API_KEY=your-calcom-api-key
CALCOM_BOOKING_URL=https://cal.com/your-username

# Production-specific
# SSL/TLS
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# CDN
CDN_URL=https://your-cdn-domain.com

# Load Balancer
LOAD_BALANCER_HEALTH_CHECK_PATH=/api/health